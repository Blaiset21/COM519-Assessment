<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <title>Warhammer Tournament</title>

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.5/examples/album/"
    />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('common/header'); -%>
<div class="container">

  <% if (message) { %>

      <div class="row col-md-12 nx-auto">
        <div class="alert alert-success col-md-offset-6" role="alert">
          <%= message %>
      </div>
  
  <% } %>

    </div>
    <div class="row col-md-12 col-md-offset-2 custyle mx-auto">
 
    <a href="/create-army/"><button type="button" class="btn btn-primary">Create a new army</button> </a>
    <h1 class="mx-auto">  Current Armies  </h1>
  
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>ID</th>
            <th>Army name</th>
            <th>Owner</th>
            <th>Faction</th>
            <th>Points</th>
            <th>Wins</th>

        </tr>

        <%  
        
          armies.forEach(army => {
            
        %>

            <tr>
                <td><%=  army._id  %></td>
                <td><%=  army.name  %></td>
                <td><%=  (army.owner || "-") %></td>
                <td><%=  (army.faction || "-") %></td>
                <td><%=  army.points %></td>
                <td><%=  army.wins %></td>
                
                <td class="text-center"><a href="/armies/update/<%= army.id %>" class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span> Edit</a> 
                  <a  href="/armies/delete/<%= army.id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
                 
            </tr>
            
         <%  
          });
         %>


       
    </thead>
          
    </table>

     
    </div>
    
  
    <%- include('common/footer') -%>
  </body>
</html>
